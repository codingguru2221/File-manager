<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mediaviewer.controller.DashboardController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Smart Media Viewer" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="selectFolderButton" text="Select Folder" />
        <TextField fx:id="searchField" promptText="Search files..." prefWidth="200" />
    </HBox>
    
    <!-- Filter Controls -->
    <HBox alignment="CENTER_LEFT" spacing="10" VBox.vgrow="NEVER">
        <padding>
            <Insets top="10" bottom="10" />
        </padding>
        <Label text="Filter by:" />
        <ComboBox fx:id="fileTypeFilter" prefWidth="120" />
        <ComboBox fx:id="dateRangeFilter" prefWidth="120" />
        <Label text="Size:" />
        <Slider fx:id="sizeFilter" min="0" max="100" prefWidth="150" />
        <Pane HBox.hgrow="ALWAYS" />
        <Button text="Export" onAction="#exportFileList" />
    </HBox>
    
    <!-- Tag Panel -->
    <FlowPane fx:id="tagPanel" hgap="5" vgap="5" prefHeight="30">
        <padding>
            <Insets top="5" bottom="5" />
        </padding>
    </FlowPane>
    
    <!-- Folder Info -->
    <VBox fx:id="folderInfoBox" style="-fx-background-color: #ecf0f1; -fx-padding: 10; -fx-spacing: 5;">
        <Label fx:id="folderNameLabel" style="-fx-font-weight: bold;" />
        <Label fx:id="folderPathLabel" />
        <Label fx:id="folderSizeLabel" />
    </VBox>
    
    <!-- Stats Grid -->
    <GridPane hgap="10" vgap="10" style="-fx-background-color: #ecf0f1; -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5;">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="20.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Label text="Images" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="imageCountLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3498db;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="imageSizeLabel" text="0 MB" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        
        <Label text="Videos" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label fx:id="videoCountLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3498db;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label fx:id="videoSizeLabel" text="0 MB" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Documents" style="-fx-font-weight: bold;" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <Label fx:id="documentCountLabel" text="0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #3498db;" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Label fx:id="documentSizeLabel" text="0 MB" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    </GridPane>
    
    <!-- Progress Bar -->
    <HBox alignment="CENTER" spacing="10" VBox.vgrow="NEVER">
        <padding>
            <Insets top="10" bottom="10" />
        </padding>
        <ProgressBar fx:id="scanProgressBar" prefWidth="200.0" visible="false" />
        <Label fx:id="progressLabel" text="Scanning..." visible="false" />
    </HBox>
    
    <!-- Tab Pane -->
    <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS">
        <Tab text="Images">
            <fx:include fx:id="imageTab" source="imageTab.fxml" />
        </Tab>
        <Tab text="Videos">
            <fx:include fx:id="videoTab" source="videoTab.fxml" />
        </Tab>
        <Tab text="Documents">
            <fx:include fx:id="documentTab" source="documentTab.fxml" />
        </Tab>
    </TabPane>
</VBox>