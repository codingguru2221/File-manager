<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mediaviewer.controller.DashboardController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Label text="Smart Media Viewer" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Pane HBox.hgrow="ALWAYS" />
        <Button fx:id="selectFolderButton" text="Select Folder" />
        <TextField fx:id="searchField" promptText="Search files..." prefWidth="200" />
    </HBox>
    
    <!-- Stats Section -->
    <GridPane hgap="10" vgap="10" style="-fx-background-color: #f0f0f0; -fx-padding: 15; -fx-border-radius: 5;">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10" />
        </padding>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints hgrow="ALWAYS" />
        </columnConstraints>
        
        <Label text="Images" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
        <Label fx:id="imageCountLabel" text="0" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 20px;" />
        
        <Label text="Videos" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
        <Label fx:id="videoCountLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 20px;" />
        
        <Label text="Documents" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: bold;" />
        <Label fx:id="documentCountLabel" text="0" GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-font-size: 20px;" />
    </GridPane>
    
    <!-- Progress Bar -->
    <ProgressBar fx:id="scanProgressBar" visible="false" />
    <Label fx:id="progressLabel" visible="false" />
    
    <!-- Tab Pane -->
    <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS">
        <Tab text="Images" closable="false">
            <fx:include source="imageTab.fxml" />
        </Tab>
        <Tab text="Videos" closable="false">
            <fx:include source="videoTab.fxml" />
        </Tab>
        <Tab text="Documents" closable="false">
            <fx:include source="documentTab.fxml" />
        </Tab>
    </TabPane>
</VBox>